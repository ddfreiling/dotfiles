# Add relevant exports to the PATH

PATH="/usr/local/opt/findutils/libexec/gnubin:$PATH"
PATH="$HOME/bin:$PATH"
PATH="/usr/local/bin:$PATH"

# OpenSSL, findable by dotnet
PATH="/usr/local/opt/openssl@1.1/bin:$PATH"
# PATH="/usr/local/opt/libressl/bin:$PATH"

# OpenJDK from brew
PATH="$(brew --prefix openjdk)/bin:$PATH"
PATH="$(brew --prefix ruby)/bin:$PATH"

# Android SDK paths
# Modified according to https://stackoverflow.com/a/71901000/382830
PATH="$ANDROID_HOME/tools:$PATH"
PATH="$ANDROID_HOME/platform-tools:$PATH"
PATH="$ANDROID_HOME/cmdline-tools/latest/bin:$PATH"

# PHP Composer
PATH="$HOME/.composer/vendor/bin:$PATH"

# Path to Ruby & gem executables
PATH="/opt/homebrew/opt/ruby/bin:$PATH"
PATH="/opt/homebrew/lib/ruby/gems/3.3.0/bin:$PATH"

# Flutter
PATH="$HOME/fvm/default/bin:$PATH"
FLUTTER_ROOT="$HOME/fvm/default"

# Dart bins (flutter via fvm)
#PATH="$PATH:$HOME/fvm/default/dart"

# Add .NET Core SDK tools
# PATH="$PATH:$HOME/.dotnet/tools"

# Add pyenv shims
PATH="$(pyenv root)/shims:$PATH"

# Add Python bins
# PATH="$PATH:$HOME/Library/Python/3.9/bin"
PATH="/usr/local/opt/python@2/libexec/bin:$PATH"

# Set JAVA_HOME
PATH="$JAVA_HOME/bin:$PATH"

# Brew installed google_cloud_sdk components on PATH
#source "/usr/local/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/path.zsh.inc"

# JavaFX
PATH_TO_FX="$HOME/sdk/javafx/lib"

# MySQL Client
PATH="/opt/homebrew/opt/mysql-client/bin:$PATH"

# Add Rancher Desktop tools to path
PATH="$PATH:$HOME/.rd/bin"

# Add GOPATH to PATH
PATH="$PATH:$GOPATH/bin"

PATH="$PATH:${KREW_ROOT:-$HOME/.krew}/bin"

# export it
export PATH;
export PATH_TO_FX;
export FLUTTER_ROOT;
